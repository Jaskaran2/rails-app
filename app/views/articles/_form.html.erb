
<%= form_with model: article do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title,class:"form-control",id:"title" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group form-group-lg">
    <%= form.label :body %><br>
    <%= form.text_area :body,class:"form-control",id:"body" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div class="form-group"><%= form.select :status, ['public', 'private', 'archived'], selected: 'public',class:"form-control" %><br></div>

  <div class="form-group">
    <%= form.submit "Create",class:"btn btn-dark mt-2", id:"create_article"%>
  </div>
<% end %>