
<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card signcard">
        <ul class="nav nav-pills mb-3" id="loginCard">
            <li class="nav-item text-center">
                <%= link_to "Sign In",sign_in_path, class:"nav-link active signin"%>
            </li>
            <li class="nav-item text-center">
                <%= link_to "Sign up",sign_up_path,class:"nav-link signup"%>
            </li>    
        </ul>
        <div class="form px-4 pt-5">
            <h1>Sign In</h1>

            <%= form_with url: sign_in_path do |form|%>
                <div class="mb-3">
                    <%=form.label :email %>
                    <%= form.text_field :email, class:"form-control" %>
                </div>

                <div class="mb-3">
                    <%=form.label :password %>
                    <%= form.password_field :password, class:"form-control" %>
                    <%= link_to "Forgot your password?", password_reset_path %>
                </div>


                <div class="mb-3">
                    <%= form.submit "Sign In", class:"btn btn-dark",id:"Sign_in" %>
                </div>
            
            <% end %> 
        </div>
    </div>                               
</div>